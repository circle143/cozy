---
import { ViewTransitions } from "astro:transitions";
import "../styles/main.scss";
import Footer from "../components/Footer/Footer.astro";
import Nav from "../components/nav/Nav.astro";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta
			name="description"
			content="Cozy - The Casual Lounge isn't just a place to eat! It's a haven for relaxation and enjoyment, featuring comforting dishes with a touch of casual elegance, set in a warm and inviting atmosphere."
		/>
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>

		<ViewTransitions />
	</head>
	<body>
		<div>
			<Nav title={title} />
			<main>
				<slot />
			</main>
			<Footer />
		</div>
	</body><script>
		document.addEventListener("astro:page-load", () => {
			new ResizeObserver(() => {
				let vw = document.documentElement.clientWidth / 100;
				document.documentElement.style.setProperty("--vw", `${vw}px`);
			}).observe(document.documentElement);
		});
	</script>
	<style>
		div {
			display: flex;
			flex-direction: column;
			min-height: 100vb;
		}

		main {
			display: grid;
			gap: clamp(3em, 4vi, 4em);

			margin-block-end: clamp(3em, 5vi, 5em);
		}
	</style>
</html>
<style is:global></style>
