---
import styles from "./footer.module.scss";
import { Icon } from "../../../node_modules/astro-icon/components";
import { social } from "../../data/social";

let address = `
4th Floor, Tower-C,
Spectrum Metro Mall 
Sector-75, 
Noida
Uttar Pradesh 201301
`;

let phone = "+91 9266158606";
let email = "info@cozylounge.in";
---

<footer class={styles.footer}>
	<div class={`container ${styles.footer_1}`}>
		<div class={styles.item}>
			<div>
				<h2>Address</h2>
			</div>
			<div>
				<iframe
					src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3503.896903893822!2d77.37694167614248!3d28.572858386786958!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x390cef68bc691f7f%3A0xc0b59efc77f0218c!2sCozy%20The%20Casual%20Lounge!5e0!3m2!1sen!2sin!4v1731901741050!5m2!1sen!2sin"
					style="border:0;"
					allowfullscreen=""
					loading="lazy"
					referrerpolicy="no-referrer-when-downgrade"></iframe>
				<p>{address}</p>
			</div>
		</div>
		<div class={styles.item}>
			<div>
				<h2>Reservations</h2>
			</div>
			<div>
				<a href={`tel:${phone}`}>{phone}</a>
			</div>
			<div>
				<a href={`mailto:${email}`}>{email}</a>
			</div>
			<!-- <div>
				<a href="">WhatsApp Us</a>
			</div> -->
		</div>
		<div class={styles.item1}>
			<div>
				<div>
					<h2>Opening Hours</h2>
				</div>
				<div>
					<table>
						<tbody>
							<tr>
								<td>Mon - Sun:</td>
								<td>12:00 pm - 1:00 am</td>
							</tr>
						</tbody>
					</table>
				</div>
			</div>
			<div>
				<div>
					<h2>Connect with Us</h2>
				</div>
				<div class={styles.social}>
					<a
						href={social.facebook}
						target="_blank"
						class={styles.facebook}
					>
						<Icon name="fa6-brands:facebook-f" />
					</a>
					<a
						href={social.instagram}
						target="_blank"
						class={styles.instagram}
					>
						<Icon name="fa6-brands:instagram" />
					</a>
					<a
						href={social.whatsapp}
						target="_blank"
						class={styles.whatsapp}
					>
						<Icon name="fa6-brands:whatsapp" />
					</a>
				</div>
			</div>
		</div>
		<div class={styles.item2}>
			<div>
				<h2>Keep in Touch</h2>
			</div>
			<div>
				<p>
					Stay updated with our exclusive offers, special events, and
					new menu delights!
				</p>
				<div>
					<input type="text" placeholder="Email" />
					<button>Join</button>
				</div>
			</div>
		</div>
	</div>
	<div class={`container ${styles.footer_2}`}>
		<div>
			<p>Â© 2024 Cozy-The Casual Lounge. All rights reserved.</p>
		</div>
		<div>
			<p>
				Powered by <a href="https://in.linkedin.com/company/tech-prizm" target="_blank"
					>Tech Prizm</a
				>
			</p>
		</div>
	</div>
</footer>
